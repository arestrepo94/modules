name: Check

on:
  pull_request:
    branches:
      - main  # Adjust to your protected branch

jobs:
  check-status:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v2

      - name: Read Freeze State
        id: freeze-state
        run: |
          freeze=$(cat .github/freeze.json)
          echo "Freeze State: $freeze"
          echo "::set-output name=freeze::$freeze"

      - name: Check Freeze Status
        id: check-freeze-status
        run: |
          freeze="$INPUT_FREEZE"  # Use the freeze state obtained from the previous step
          if [ "$freeze" = "true" ]; then
            echo "Freeze is active (true), the workflow will fail."
            exit 1
          else
            echo "Freeze is inactive (false), the workflow will succeed."
          fi
        env:
          INPUT_FREEZE: ${{ steps.freeze-state.outputs.freeze }}


